      <section id="sectionCampos">
              <div class="container-fluid">
      <div class="row-fluid">
        <div class="span5">
          <img src="img/360x270.png">
        </div>
        <div class="span9">
          <h1>Agregar Lugar</h1>
                          <div class="input-prepend">
                              <span class="add-on">Nombre</span>
                              <input class="span8" id="campoNombre" type="text" placeholder="Ej. Chucho's Rancho">
                          </div>
                          <div class="input-prepend">
                              <span class="add-on">Direccion</span>
                              <input class="span5" id="campoDireccion" type="text" placeholder="Ej. Calle 00 # 00 00">
                          </div>
                          <div class="input-prepend">
                              <span class="add-on">Telefono</span>
                              <input class="span5" id="campoTelefono" type="text" placeholder="Ej. 111 11 11">
                          </div>
                                <p>URL de la imagen del lugar:</p>
                                <div class="input-append">
                                  <input class="span5" id="campoImagen" type="text">
                                  <button class="btn" type="button">Agregar</button>
                                </div>
                                <p>Descripcion</p>
                                <textarea class="span6" rows="5" id="campoDescripcion"></textarea>
                                <p>Caracteristica</p>
                                <select id="campoTipo">
                                  <option value="Restaurantes">Restaurante</option>
                                  <option value="Bares">Bar</option>
                                  <option value="Cines">Cine</option>
                                  <option value="Teatros">Teatro</option>
                                  <option value="Parques">Parque</option>
                                  <option value="Museos">Museo</option>
                                  <option value="Centros Comerciales">Centro Comercial</option>
                                </select>
                            </div>
                              <div class="input-prepend">
                                <span class="add-on">Tag</span>
                                <input class="span9" id="campoTags" type="text" placeholder="Ej. bar, bonito, caluroso">
                            </div>
                          </div>
                          <button class="btn btn-success" id="btnEnviar" type="button">Enviar</button>
                          <br>
                          <br>
        </div>
      </div>
      </section>


